programa
{
	
	funcao inicio()
	{
	inteiro anos, meses, dias, total
	escreva("\nEntre com quantidade de ano(s): ")
	leia(anos)
	escreva("\nEntre com quantidade de meses: ")
	leia(meses)
	escreva("\nEntre com quantidade de dias: ")
	leia(dias)
	total = anos * 365 + meses * 30 + dias * 1
	escreva("\nTotal de dias vividos: ",total)
	}
	
}
